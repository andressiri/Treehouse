{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "standard",
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "always"],
    "no-console": "warn",
    "comma-dangle": ["warn", "only-multiline"]
  }
}
